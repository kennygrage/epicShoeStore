<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/../main.css">
        <title>University Registrar</title>
    </head>
    <body>
        <div class="container">
            <h2>Shoes</h2>
            {% if shoes is not empty %}
                <p>Here are all your Shoes:</p>
                <ul class="list-group">
                    {% for shoe in shoes %}
                        <li class="list-group-item"><a href="/shoes/{{ shoe.getId }}">{{ shoe.getShoeName }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
            <div class="form-group">
                <form action='/shoes' method='post'>
                    <label for='shoe_name'>Shoe Name</label>
                    <input id='shoe_name' name='shoe_name' type='text'>

                    <button class="btn btn-default" type='submit'>Add Shoe</button>
                </form>
            </div>

            <div class="form-group">
                <form action='/delete_shoes' method='post'>
                    <button class="btn btn-default" type='submit'>Clear</button>
                </form>
            </div>

                <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
